<!DOCTYPE html>
<html>

<% include templates/head %>

<body id='landing'>

	<!-- ABOUT ME SECTION -->
	<section id='home'>
		<div class="row">
			<div class='large-8 large-centered medium-10 medium-centered columns'>
				<h1>Hi, I'm Elaine</h1>
				<p>I'm fascinated by how modern products, technologies, and creative processes affect people, and vice versa. I'm a Masters student at Stanford studying Human-Computer Interaction.</p>
				<p>Say hello at <a href="mailto:ezhou@stanford.edu">ezhou@stanford.edu</a></p>
			</div>
		</div>
		<div class="row">
			<div class='large-1 large-push-8 medium-2 medium-push-8 small-3 small-push-7 columns'>
				<img src="images/logoDark.png">
			</div>
		</div>
	</section>

<div class='clearfix'></div>

<!-- PROJECTS SECTION -->
<section id='projects'>
	<div class='row'>
		<div class='large-12 large-centered columns'>
			<!-- <h3 class='section-title'>Projects</h3> -->
			<ul class='tiles'>
				<% for(var i=0; i<projects.length; i++) { %>
					<% var project = projects[i] %>
					<% if (i % 3 == 0) { %>
					<div class='row tile-row'>
						<li class='medium-7 large-8 columns tile major' id='<%- project.slug %>' >
					<% } else {  %>
						<li class='medium-5 large-4 columns tile minor' id='<%- project.slug %>' >
					<% } %>
							<div class='tile-img'>
								<div class='inner' style='background-image: url("<%- project.img %>")'></div>
							</div>
							<div class='tile-text pull-down'>
								<div class='row'>
									<% if(i % 3 == 0) { %>
									<div class='medium-11 large-10 columns'>
										<h4 class='title-underline'><%- project.name %></h4>
										<div class='proj-content'><p><%- project.content %></p></div>
									<% } else { %>
									<div class='medium-11 large-11 columns'>
										<h5 class='title-underline'><%- project.name %></h5>
										<div class='proj-content'><p><%- project.content %></p></div>
									<% } %>
									</div>
									<span class='more-triangle'>
										<i class='fa fa-long-arrow-right fa-lg'></i>
									</span>
								</div>
							</div>
						</li>
					<% if (i % 3 == 2) { %>
					</div>
					<% } %>
				<% } %>
			</ul>
		</div>
		<!-- <div class='medium-12 large-centered columns tile'>
			<div class='row'>
				<div class='tile-text'>
					<h4 class='title-underline'>Other Projects</h4>
				</div>
			</div>
		</div> -->
	</div>
</section>


<footer>
	<div class='row'>
		<div class='center'>
		 <p>Elaine Zhou â€¢ 2016</p>
		</div>
	</div>
</footer>

<% include templates/scripts %>
<script src='javascripts/index-script.js'></script>


</body>
</html>