<div class='clearfix'></div>

<!-- PROJECTS SECTION -->
<section id='projects'>
	<div class='row'>
		<div class='large-12 large-centered columns'>

			<ul class='tiles'>
				<% for(var i=0; i<projects.length; i++) { %>
					<% var project = projects[i] %>
					<% if (i % 3 == 0) { %>
					<div class='row tile-row'>
						<li class='medium-7 large-8 columns major'>
							<div class='tile' id='<%- project.slug %>' >
					<% } else {  %>
						<li class='medium-5 large-4 columns minor'>
							<div class='tile' id='<%- project.slug %>' >
					<% } %>
							
								<div class='tile-img'>
									<div class='inner' style='background-image: url("<%- project.img %>")'></div>
								</div>
								<div class='tile-text'>
									<div class='row'>
										<% if(i % 3 == 0) { %>
										<div class='medium-11 large-10 columns'>
											<h4 class='title-underline'><%- project.name %></h4>
											<div class='proj-content'><p><%- project.content %></p></div>
										<% } else { %>
										<div class='medium-11 large-11 columns'>
											<h5 class='title-underline'><%- project.name %></h5>
											<div class='proj-content'><p><%- project.content %></p></div>
										<% } %>
										</div>
									</div>
								</div>
							</div>
						</li>
					<% if (i % 3 == 2) { %>
					</div>
					<% } %>
				<% } %>
			</ul>
		</div>
	</div>
</section>

<!-- WORK SECTION -->
<section id='work'>
	<div class='row'>
		<div class='large-12 large-centered columns'>

			<ul class='tiles'>
				<div class='row tile-row'>
					<% for(var i=0; i<works.length; i++) { %>
						<% var work = works[i] %>
							<li class='medium-4 columns minor'>
								<div class='tile' id='<%- work.slug %>' data-url='<%- work.url %>'>
									<div class='tile-img'>
										<div class='inner' style='background-image: url("<%- work.img %>")'></div>
									</div>
									<div class='tile-text'>
										<div class='row'>
											<div class='medium-11 large-10 columns'>
												<h5 class='title-underline'><%- work.name %></h5>
												<div class='proj-content'><p><%- work.content %></p></div>
											</div>
										</div>
									</div>
								</div>
							</li>
						<% if (i % 3 == 2) { %>
						</div>
						<% } %>
					<% } %>
				</div>
			</ul>
		</div>
	</div>
</section>


